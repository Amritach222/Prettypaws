<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="220dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:onClick="OpenDogPreview">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp">
        <LinearLayout
            android:id="@+id/dogTextLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_alignLeft="@+id/dogImageLayout"

            >
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="45dp"
                app:cardCornerRadius="30dp"
                android:layout_marginLeft="30dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="115dp">
                    <TextView
                        android:id="@+id/row_dog_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Leo"
                        android:textColor="@color/colorBlack"
                        android:textSize="35dp"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/row_dog_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dalmatatian"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/row_dog_age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="7 Years Old"
                        android:textSize="20dp"
                        />
                    <TextView
                        android:id="@+id/row_dog_gender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="20dp"
                        />
                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/dogImageLayout"
        android:layout_width="140dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
    >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cardCornerRadius="30dp"
            >
            <ImageView
                android:id="@+id/row_dog_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/dog">

            </ImageView>
            <ImageButton
                android:id="@+id/dog_like_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_favwhite"
                android:background="#00000000"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="10dp"
                />
        </androidx.cardview.widget.CardView>



    </LinearLayout>

    </RelativeLayout>


</LinearLayout>