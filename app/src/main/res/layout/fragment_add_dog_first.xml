<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddDogFragments.AddDogFragmentFirst"
    android:background="@color/background_color">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/add_picture"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/dogwithman"/>
    <TextView
        android:id="@+id/dog_add_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Dog For Adoption"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:textColor="#000"
        android:textSize="30sp"/>

        <TextView
            android:id="@+id/add_dog_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_margin="10dp"
            android:text="We will help you to add dog for adoption. Please kindly fill the form"/>
        </LinearLayout>
        <TextView
            android:id="@+id/note_for_add_dog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:text="Note: Please click on floating button &#xA;for further process"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/mainColor"
        android:layout_gravity="end|bottom"
        android:clickable="true"
        android:onClick="clickFAB1"
        android:src="@drawable/ic_right_arrow"
        android:contentDescription="@string/submit"
        android:layout_margin="16dp"
        tools:ignore="OnClick" />

</FrameLayout>