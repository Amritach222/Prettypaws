<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/background_color"
    android:padding="10dp"
    tools:context=".AdoptionQuestions.AdoptionSlideActivity">
<ImageView
    android:id="@+id/adoption_image"
    android:layout_width="200dp"
    android:layout_height="200dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="20dp"
    android:scaleType="centerCrop"
    android:src="@drawable/dogwithman"/>

    <TextView
        android:id="@+id/adoption_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adoption_image"
        android:layout_marginTop="80dp"
        android:fontFamily="serif"
        android:gravity="center"
        android:text="The greatness of a nation can be judged by the way its animals are treated."
        android:textSize="22dp" />
    <TextView
        android:id="@+id/question_container"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is Your name ?"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/page_title"/>
    <RadioGroup
        android:id="@+id/radiogroup_ans"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:layout_below="@id/question_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RadioButton
            android:id="@+id/rb_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Yes" />
        <RadioButton
            android:id="@+id/rb_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No"/>

    </RadioGroup>
    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_next"
        android:layout_alignParentRight="true" />
    <ImageView
        android:layout_centerVertical="true"
        android:id="@+id/btn_previous"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_previous"
        android:layout_alignParentLeft="true" />
    <LinearLayout
        android:id="@+id/dotted_steps"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="450dp"
        android:gravity="center">
        <ImageView
            android:layout_margin="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/dot1"
            android:src="@drawable/selected"/>
        <ImageView
            android:layout_margin="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/dot2"
            android:src="@drawable/selected"/>
        <ImageView
            android:layout_margin="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/dot3"
            android:src="@drawable/selected"/>
        <ImageView
            android:layout_margin="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/dot4"
            android:src="@drawable/selected"/>
        <ImageView
            android:layout_margin="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/dot5"
            android:src="@drawable/selected"/>
        <ImageView
            android:layout_margin="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/dot6"
            android:src="@drawable/selected"/>
        <ImageView
            android:layout_margin="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/dot7"
            android:src="@drawable/selected"/>
        <ImageView
            android:layout_margin="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/dot8"
            android:src="@drawable/selected"/>
        <ImageView
            android:layout_margin="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/dot9"
            android:src="@drawable/selected"/>
        <ImageView
            android:layout_margin="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/dot10"
            android:src="@drawable/selected"/>
        <ImageView
            android:layout_margin="4dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:id="@+id/dot11"
            android:src="@drawable/selected"/>

    </LinearLayout>
    <Button
        android:id="@+id/next_to_question"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="Get Started"
        android:background="@drawable/bg_login_btn"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"/>
</RelativeLayout>